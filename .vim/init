" initial infection… make it happen
filetype off

runtime bundle/vim-pathogen/autoload/pathogen.vim
execute pathogen#infect()
execute pathogen#helptags()

filetype on
filetype plugin on
filetype indent on

syntax on

set modeline
set background=dark

set noautoread
set autowrite
set autoindent
set smartindent

set backspace=indent,eol,start
set copyindent
set noconfirm
set cpoptions=ceFgns
set nodigraph
set noerrorbells
set encoding=utf-8
set esckeys
set magic

set hidden
set ignorecase
set infercase
set smartcase
set incsearch
set hlsearch

set mouse=a
set mousefocus
set mousehide

set smarttab
set expandtab
set tabstop=4
set softtabstop=4
set shiftround
set shiftwidth=4
set textwidth=71
set ttyfast
set wrap
set nofoldenable
set formatoptions=qrnl1
if exists("+colorcolumn")
    set colorcolumn=85
endif

set scrolloff=2
set laststatus=2
set number
set ruler
set showcmd
set showmatch
set showmode
set wildmenu
set wildmode=list:longest
set wrapscan

set history=1200
set wildignore=*~,*.swp,*.bak,*.pyc,*.class
set title
set visualbell

set list
set listchars=tab:▸\ ,eol:┐

" backups and undo
set backupdir=~/.vim-backup
set directory=~/.vim-backup//
set backup
set undolevels=1200
if exists("+undofile")
    set undofile
    set undodir=$HOME/.vim-undo
endif

" colorschemes and gui
if has("gui_running")
    set guifont=Ubuntu\ Mono\ 13
    set guioptions=acegimrLT
    set mousehide
endif

colorscheme solarized
highlight SpecialKey ctermfg=11 ctermbg=8

if &term =~ '256color'
  " Disable Background Color Erase (BCE) so that color schemes work
  " properly within 256-color terminals
  set t_ut=
endif

" load specific configuration
runtime autocommands
runtime mappings
runtime pluginconfig
runtime local

" vim: syntax=vim ft=vim
