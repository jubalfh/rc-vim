" key mappings

let mapleader = ","
let g:pep8_map='<leader>8'

nnoremap <silent> <leader><space> :noh<CR>

nnoremap <silent> <leader>td <Plug>TaskList
nnoremap <silent> <leader>n :NERDTreeToggle<CR>
nnoremap <silent> <leader>g :GundoToggle<CR>
nnoremap <silent> <leader>l :TagbarToggle<CR>

nnoremap <silent> <leader>sv :source $MYVIMRC<cr>
nnoremap <silent> <leader>w! :write !sudo tee % >/dev/null<cr><cr>
nnoremap <silent> <leader>sh :ScreenShell<cr>
nnoremap <silent> <leader>sq :ScreenQuit<cr>
nnoremap <silent> <leader>te :set expandtab!<cr>

if &readonly
    nnoremap <silent> <esc> <esc><esc>:qa!<cr>
endif

